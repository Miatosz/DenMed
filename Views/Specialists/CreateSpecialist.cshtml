@model Specialist

<form asp-action="CreateSpecialist" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Imie</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname">Nazwisko</label>
        <textarea asp-for="Surname" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">telefon</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Age">wiek</label>
        <input asp-for="Age" class="form-control" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Zapisz</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>

    </div>
</form>